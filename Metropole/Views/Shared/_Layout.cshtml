<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metropole - @ViewBag.Title</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
   

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/cleditor")
    @Styles.Render("~/Content/toastr")

    <link href="//code.jquery.com/ui/1.8.20/themes/redmond/jquery-ui.css" rel="stylesheet" />


   


    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="A survey site for residents to communicate." />
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top  no-top-bottom-padding ">
        <div class="container ">
            <div class="bg-dark  display-flex justify-content flex-grow flex-wrap top-bottom-padding-8">
                @Html.ActionLink("Metropole", "Index", "Home", new { area = "" }, new { @class = "navbar-brand padding-left-8" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item ">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                        </li>
                        @Html.Partial("_SurveyMenu")
                        @if (Metropole.Helpers.Environment.Instance.DebugMenu)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Debug", "TestEmail", "Debug", null, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>

                    @Html.Partial("_LoginPartial")

                </div>
            </div>
        </div>
    </nav>






    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - John Blair</p>
        </footer>
    </div>
   
    
   
    
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/toastr")
    @RenderSection("scripts", required: false)

    @Html.Partial("_FlashPartial")
</body>
</html>
